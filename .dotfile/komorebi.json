{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.27/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "mouse_follows_focus": false,
  "default_workspace_padding": 4,
  "default_container_padding": 4,
  "border": true,
  "border_width": 1,
  "border_offset": 0,
  "border_style": "Square",
  "border_colours": {
    "single": "#B8BB26",
    "stack": "#83A598",
    "monocle": "#FB4934",
    "unfocused": "#1D2021"
  },
  "transparency": false,
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300,
      "focused_text": "#B8BB26",
      "unfocused_text": "#EBDBB2",
      "background": "#1D2021"
    }
  },
  "initial_workspace_rules": [],
  "tray_and_multi_window_applications": [
    {
      "kind": "Class",
      "id": "SDL_app",
      "matching_strategy": "Equals"
    }
  ],
  "monitors": [
    {
      "work_area_offset": {
        "top": 50,
        "bottom": 50,
        "left": 0,
        "right": 0
      },
      "workspaces": [
        {
          "name": "TERMINAL",
          "layout": "Grid",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "alacritty.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "BROWSER",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "chrome.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "DEVELOPMENT",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Code.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "FILE",
          "layout": "VerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "explorer.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "COMMUNICATION",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Discord.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "DESIGN",
          "layout": "BSP"
        },
        {
          "name": "GAMING",
          "layout": "BSP"
        },
        {
          "name": "NOTION",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Notion.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "OTHERS",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "vsthost.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "DESKTOP",
          "layout": "BSP"
        }
      ]
    }
  ]
}
