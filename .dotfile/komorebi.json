{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  "animation": {
    "enabled": true,
    "style": "EaseInQuad",
    "duration": 200
  },
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "mouse_follows_focus": false,
  "default_workspace_padding": 4,
  "default_container_padding": 4,
  "border": true,
  "border_width": 2,
  "border_offset": -1,
  "border_style": "Square",
  "unmanaged_window_operation_behaviour": "NoOp",
  "border_colours": {
    "single": "#7eb08a",
    "stack": "#ba8eaf",
    "monocle": "#d2b48c",
    "unfocused": "#273136"
  },
  "transparency": false,
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300,
      "focused_text": "#ff819f",
      "unfocused_text": "#d2b48c",
      "background": "#273136"
    }
  },
  "float_rules": [
    {
      "kind": "Exe",
      "id": "zebar.exe",
      "matching_strategy": "Equals"
    }
  ],
  "global_work_area_offset": {
    "top": 42,
    "bottom": 42,
    "left": 0,
    "right": 0
  },
  "tray_and_multi_window_applications": [
    {
      "kind": "Class",
      "id": "SDL_app",
      "matching_strategy": "Equals"
    }
  ],
  "manage_rules": [
    {
      "kind": "Title",
      "id": "Task Manager",
      "matching_strategy": "Equals"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "Grid"
        },
        {
          "name": "2",
          "layout": "Grid"
        },
        {
          "name": "3",
          "layout": "Grid"
        },
        {
          "name": "4",
          "layout": "Grid"
        },
        {
          "name": "5",
          "layout": "Grid",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Discord.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "6",
          "layout": "Grid"
        },
        {
          "name": "7",
          "layout": "Grid"
        },
        {
          "name": "8",
          "layout": "Grid"
        },
        {
          "name": "9",
          "layout": "Grid"
        },
        {
          "name": "0",
          "layout": "Grid",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "vsthost.exe",
              "matching_strategy": "Equals"
            }
          ]
        }
      ]
    }
  ]
}
